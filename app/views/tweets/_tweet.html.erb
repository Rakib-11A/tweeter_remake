<%= turbo_frame_tag dom_id(tweet) do %>


  <div class="mt-2 border-l shadow px-2 py-2 rounded-lg">
    <div>
      <%= tweet.body %>
      <p class="mt-2">
        <%= button_to "Likes(#{tweet.likes_count})",
                    tweet_likes_path(tweet),
                    method: :post,
                    class: "bg-gray-400 px-2 py-1 mr-1 text-sm rounded" %>
        <%= button_to "Retweets(#{tweet.retweets})",
                      tweet_retweets_path(tweet),
                      method: :post,
                      class: "bg-gray-400 px-2 py-1 mr-1 text-sm rounded mt-2"
        %>
        <%= link_to "Edit", edit_tweet_path(tweet) %>
      </p>

    </div>
  </div>

<% end %>
