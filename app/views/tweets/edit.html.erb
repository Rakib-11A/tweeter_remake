<% content_for :title, "Editing tweet" %>

<h1>Editing tweet</h1>
<%= turbo_frame_tag dom_id(@tweet) do %>
  <div class="border-l rounded-2xl shadow px-2 py-2 mt-2">
    <%= render "form", tweet: @tweet %>
    <%= link_to "Cancel", root_path, class: "bg-orange-500 px-1 py-1 rounded-lg text-sm" %>
  </div>
<% end %>

