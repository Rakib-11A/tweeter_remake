<nav class="bg-gray-800">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between items-center">
      <!-- Logo -->
      <div class="flex items-center">
        <img class="h-8 w-auto" src="https://tailwindcss.com/plus-assets/img/logos/mark.svg" alt="Logo">
        <span class="text-white font-bold ml-2">MyApp</span>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:flex space-x-4">
        <%= link_to "Home", root_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
        <%= link_to "About", "#", class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
      </div>

      <!-- Right Side Auth Buttons -->
      <div class="flex items-center space-x-2">
        <% if user_signed_in? %>
          <span class="text-gray-300 text-sm mr-2">Hi, <%= current_user.name %></span>
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete,
                        class: "bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-md text-sm" %>
        <% else %>
          <%= link_to "Login", new_user_session_path,
                      class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-md text-sm" %>
          <%= link_to "Sign Up", new_user_registration_path,
                      class: "bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded-md text-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
